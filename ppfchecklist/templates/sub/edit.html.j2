
<div class="collapse {{ collapse_class }}">
  <form action="/update/{{ type }}" method="POST">
    <div class="form-row">
      <input class="form-control" type="hidden" id="uid" name="uid" value="{{ uid }}">
      <input class="form-control" type="hidden" id="old" name="old" value="{{ position }}">
      <div class="form-group col-12">
        <input class="form-control" type="text" id="name" name="name" value="{{ name }}">
      </div>
      <div class="form-group col-4 col-sm-6 col-md-2">
        <input class="form-control" type="number" id="new" name="new" placeholder="{{ position }}" value="{{ position }}">
      </div>
      <div class="form-group col-5 col-sm-4 col-md-7">
        <input class="form-control" type="date" id="date" name="date" value="{{ date }}">
      </div>
      <div class="form-group col-3 col-sm-2 col-md-3">
        <button type="submit" class="btn btn-primary btn-block">Update</button>
      </div>
    </div>
  </form>
  <form action="/move/{{ type }}" method="POST">
    <div class="form-row">
      <input class="form-control" type="hidden" id="uid" name="uid" value="{{ uid }}">
      <input class="form-control" type="hidden" id="name" name="name" value="{{ name }}">
      <input class="form-control" type="hidden" id="old" name="old" value="{{ position }}">
      <div class="form-group col-3 col-sm-6 col-md-2">
        <input class="form-control" type="number" id="new" name="new" placeholder="{{ position }}" value="{{ position }}">
      </div>
      <div class="from-group col-3 col-sm-4 col-md-7">
        <select class="form-control" id="table" name="table">
          {% for table in tbls %}
          <option value="{{ table }}" {% if table == type %}selected{% endif %}>{{ table }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="form-group col-6 col-sm-2 col-md-3">
        <button type="submit" class="btn btn-primary btn-block">Move</button>
      </div>
    </div>
  </form>
  <form action="/delete/{{ type }}" method="POST">
    <div class="form-row">
      <input class="form-control" type="hidden" id="uid" name="uid" value="{{ uid }}">
      <div class="form-group col-9 col-sm-10 col-md-9">
        <input class="form-control" type="text" id="name" name="name" placeholder="Name">
      </div>
      <div class="form-group col-3 col-sm-2 col-md-3">
        <button type="submit" class="btn btn-primary btn-block">Delete</button>
      </div>
    </div>
  </form>
</div>
