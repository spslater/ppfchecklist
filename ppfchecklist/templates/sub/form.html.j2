<!-- New Form -->
<div class="container-fluid">
  <form action="/list/{{ type }}" method="POST">
    <div class="form-row">
      <div class="form-group col-3 col-sm-2 col-md-1">
        <label for="position" name="position">Position</label>
        <input
          class="form-control"
          type="number"
          id="position"
          name="position"
          min="1"
          step="1"
          placeholder="pos"
        />
      </div>
      <div class="form-group col-7 col-sm-4 col-md-5">
        <label for="name" name="name">Name</label>
        <input class="form-control" type="text" id="name" name="name"
        placeholder="Name" {% if 'autofocus' %}autofocus="autofocus" {% endif
        %}>
      </div>
      <div class="form-group col-2 col-sm-2 col-md-2">
        <label for="status" name="status">Status</label>
        <select class="form-control" name="status" id="status">
          {% for stat in status %}
            <option value="{{stat['rowid']}}">{{stat['name']|title}}</option>
          {% endfor %}
        </select>
      </div>
      <div class="form-group col-8 col-sm-2 col-md-2">
        <label for="date" name="date">Date</label>
        <input class="form-control" type="date" id="date" name="date" />
      </div>
      <div class="form-group col-4 col-sm-2 col-md-2">
        <label for="submit" name="submit">&nbsp;</label>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </div>
  </form>
  <br />
  <hr />
</div>
